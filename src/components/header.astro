---
import DateTime from "@components/date-time.tsx";
import DropdownMenu from "@components/dropdown-menu.astro";
import { Icon } from "astro-icon/components";

const resumeUrl =
  "https://raw.githubusercontent.com/eddyv/awesome_cv/main/cv.pdf";
const fileMenuItems = [
  { label: "Resume", href: resumeUrl, shortcut: "⌘D" },
  { label: "Mail", href: "mailto:vaismanedward@gmail.com", shortcut: "⌘M" },
  { label: "GitHub", href: "https://github.com/eddyv", shortcut: "⌘G" },
  {
    label: "LinkedIn",
    href: "https://www.linkedin.com/in/edwardvaisman/",
    shortcut: "⌘L",
  },
];
---

<header class="fixed top-0 z-50 w-full">
  <div class="bg-white/10 px-2 py-1 backdrop-blur-2xl">
    <div class="flex h-full items-center justify-between text-white/90">
      <div class="flex h-full items-center gap-2 sm:gap-4">
        <Icon name="mdi:apple" class="size-6" />
        <span class="text-sm font-semibold sm:text-base cursor-default"
          >Edward Vaisman</span
        >
        <div class="group relative flex h-full items-center">
          <span class="hidden text-sm sm:inline sm:text-base cursor-default"
            >File</span
          >
          <span class="sm:hidden cursor-default">≡</span>
          <DropdownMenu items={fileMenuItems} />
        </div>
      </div>

      <div class="flex h-full items-center gap-2 sm:gap-3">
        <span class="h-4 w-px bg-white/20"></span>
        <DateTime client:load />
      </div>
    </div>
  </div>
</header>
